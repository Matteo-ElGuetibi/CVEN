<div class="card md-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property,'imageFile') | imagine_filter('my_thumb') }}" alt="card-img-top" style="width: 100%; height:auto;">
        {% else %}
            <img src="{{ '/images/products/villa.jpg' | imagine_filter('my_thumb') }}" alt="card-img-top" style="...">    
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }}m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-size:2rem; font-weight: bold;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>